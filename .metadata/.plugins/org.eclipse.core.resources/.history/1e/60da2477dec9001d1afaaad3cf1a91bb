#ifndef BLUETOOTH_H_
#define BLUETOOTH_H_
#include "LPC845.h"
#include <stdbool.h>
#include "peripherals.h"
#include "fsl_debug_console.h"


typedef enum VehicleControl{
	FORWARD = 'F',
	BACKWARD = 'B',
	RIGHT = 'R',
	LEFT = 'L',
	STOP = 'S'
}VehicleControl;

extern volatile bool bluetooth_flag;
extern volatile VehicleControl bluetooth_data;

void USART1_IRQHandler(void);


#endif /* BLUETOOTH_H_ */
