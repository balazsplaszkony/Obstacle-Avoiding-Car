#include "motor.h"

Motor motor_left;
Motor motor_right;

void InitMotors(){

	//ennek igy lehet nem sok értelme van és máshogy kéne
	//motor_right.direction = STOP_M;
	motor_right.pwm_pin = 16;
	motor_right.Input1 = 17;
	motor_right.Input2 = 18;

	//motor_left.direction = STOP_M;
	motor_left.pwm_pin = 9;
	motor_left.Input1 = 8;
	motor_left.Input2 = 10;
}

void SetPWM_right(uint8_t duty){
	if(duty > 80)
		duty = 80;
	SCTIMER_UpdatePwmDutycycle(SCT0, 0U, duty, SCT0_pwmEvent[0]);
}

